<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <style>
         li:hover {
        background-color: olivedrab;
    }


        div.body-content {

            outline:double;
            outline-color: olivedrab;
            
            border:double;
            border-color:olivedrab;
            background:border-box;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
        
        div.container {
            border-color: olivedrab;
            background:border-box;
            width:auto;

        }

    </style>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="top">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Formatics", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>


    $(document).ready(function () {

        $("#Alert").click(function (page) {
            page.preventDefault();
            page.stopPropagation();

            var $alert = $("#AlertView"),
        url = $(this).data('url');

    $.get(url, function(data) {
        $alert.replaceWith(data);
    });

        });

          $("#Details").click(function (page) {
            page.preventDefault();
            page.stopPropagation();

              $("#detailsMedicine").show();
              $("#Details").hide();

      
          });

         $("#HideDetails").click(function (page) {
            page.preventDefault();
            page.stopPropagation();

              $("#detailsMedicine").hide();
             $("#Details").show();

         });

         $("#setAppoint").click(function (page) {
            page.preventDefault();
            page.stopPropagation();

             
            var $appoint = $("#dateAppoint"),
        url = $(this).data('url');

    $.get(url, function(data) {
        $appoint.replaceWith(data);
    });
       

         });

         $("#Alert").click(function (page) {
            page.preventDefault();
            page.stopPropagation();

              $("#Alert").hide();
               $("#hidealerts").show();

      
          });

         $("#hidealerts").click(function (page) {
            page.preventDefault();
            page.stopPropagation();

            $("#hidealerts").hide();

             $("#Alert").show();

         });
       

      





    });

    </script>

</body>
</html>
