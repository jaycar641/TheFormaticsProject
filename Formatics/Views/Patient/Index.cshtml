
@{
    ViewBag.Title = "Index";
    var list = ViewData["AlertData"] as List<Formatics.Models.Alert>;
    var resources = ViewData["Resources"] as List<string>;
    var patient = ViewData["Patient"] as Formatics.Models.Patient;


}

@Html.ActionLink("Edit Profile", "Edit", new { PatientNumber = patient.PatientNumber }, new { @class = "btn btn-default" })
@Html.ActionLink("View Profile", "Details", new {PatientNumber = patient.PatientNumber }, new { @class = "btn btn-default" })


<h2>Dashboard</h2>
<dl class="dl-horizontal">
    @Html.Display("Personalization")
</dl>
<br />
<br />
@Html.Display("Date")
<div>
    <hr />
    <h4>Treatment Plan</h4>
    <dl id="GlimpsePage" class="dl-horizontal">
        @Html.Display("Glimpse")
    </dl>
    <button id="TreatementPlan" ='@Url.Action("Index", "Intervention")'>View</button>


</div>

<h4>Alerts</h4>
<table id="AlertTable" class="table">


    @foreach (var item in list)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.time)
            </td>
            <td>
            </td>

        </tr>
    }

</table>
<button id="Alert" data-url='@Url.Action("Alerts", "FrontEnd", new { id = 1})'>View All</button>

<h4>Resources</h4>

<table class="table">


    @foreach (var item in resources)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item)
            </td>
        </tr>
    }

</table>








